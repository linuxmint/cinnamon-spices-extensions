{
    "section1": {
        "type": "section",
        "description": "Keyboard shortcuts"
    },
    "hotkey": {
        "type": "keybinding",
        "default": "<Control>q",
        "description": "Open Cinnamon-Screenshot"
    },
    "fullscreenHotkey": {
        "type": "keybinding",
        "default": "<Control><Shift>1",
        "description": "Take fullscreen screenshot"
    },
    "activeWindowHotkey": {
        "type": "keybinding",
        "default": "<Control><Shift>2",
        "description": "Take active window screenshot"
    },
    "selectionHotkey": {
        "type": "keybinding",
        "default": "<Control><Shift>3",
        "description": "Take selection screenshot"
    },
    "section2": {
        "type": "section",
        "description": "Interface settings"
    },
    "mousePointerVisible": {
        "type": "switch",
        "default": true,
        "description": "Include mouse pointer in screenshots"
    },
    "enableTransitions": {
        "type": "switch",
        "default": true,
        "description": "Enable animated transitions for edit mode"
    }
} 
