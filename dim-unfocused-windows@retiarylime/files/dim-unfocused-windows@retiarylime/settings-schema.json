{
    "section-opacity": {
        "type": "section",
        "description": "Opacity Settings"
    },
    "dim-opacity": {
        "type": "scale",
        "description": "Opacity percentage for unfocused windows",
        "min": 10,
        "max": 95,
        "default": 70,
        "step": 5,
        "tooltip": "Controls how dim unfocused windows appear. Lower values = more transparent."
    },
    "section-animation": {
        "type": "section",
        "description": "Animation Settings"
    },
    "animation-time": {
        "type": "scale",
        "description": "Animation duration",
        "min": 0,
        "max": 1000,
        "default": 300,
        "step": 50,
        "units": "ms",
        "tooltip": "Time it takes for the dimming animation to complete"
    },
    "toggle-keybinding": {
        "type": "keybinding",
        "description": "Toggle dimming on/off",
        "default": "<Super><Shift>d",
        "tooltip": "Keyboard shortcut to temporarily toggle the dimming effect"
    }
}
