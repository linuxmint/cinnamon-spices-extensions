{
	"general-section": {
		"type": "section",
		"description": "General"
	},

	"icon-mode": {
		"type": "combobox",
		"default": 1,
		"description": "Icon Mode",
		"options": {
			"Simple": 1,
			"Trigun": 2,
			"Nublo": 3,
			"Risco": 4,
			"Wolf": 5,
			"Pincel": 6,
			"Claw": 7,
			"Metropoli": 8,
			"Flowey": 9,
			"Kusco": 10,
			"Ouroboros": 11,
			"Helix": 12,
			"Direction": 13,
			"Spinks": 14,
			"Thatch": 15,
			"Cotton": 16,
			"Circle": 17,
			"Gear": 18,
			"H-Star": 19
		}
	},
	"size": {
		"type": "spinbutton",
		"default": 60,
		"min": 20,
		"max": 120,
		"step": 5,
		"units": "px",
		"description": "Icon Size"
	},
	"animation-mode": {
		"type": "combobox",
		"default": "blink",
		"description": "Click Animation Mode",
		"options": {
			"Blink": "blink",
			"Bounce": "bounce",
			"Retract": "retract",
			"Expand": "expand"
		}
	},
	"animation-time": {
		"type": "spinbutton",
		"default": 400,
		"min": 100,
		"max": 5000,
		"step": 50,
		"units": "ms",
		"description": "Animation Time"
	},
	"general-opacity": {
		"type": "spinbutton",
		"description": "General Opacity",
		"default": 255,
		"min": 5,
		"max": 255,
		"step": 5
	},
	"deactivate-in-fullscreen": {
		"type": "checkbox",
		"default": false,
		"description": "Deactivate In Fullscreen"
	},
	"pause-effects-binding": {
		"type": "keybinding",
		"description": "Pause Effects Keybinding",
		"default": "",
		"tooltip": "Set keybinding to pause or continue the effects"
	},

	"events-section": {
		"type": "section",
		"description": "Events"
	},

	"left-click-effect-enabled": {
		"type": "checkbox",
		"default": true,
		"description": "Enable Left Click Effect"
	},
	"middle-click-effect-enabled": {
		"type": "checkbox",
		"default": true,
		"description": "Enable Middle Click Effect"
	},
	"right-click-effect-enabled": {
		"type": "checkbox",
		"default": true,
		"description": "Enable Right Click Effect"
	},
	"pause-animation-effects-enabled": {
		"type": "checkbox",
		"default": true,
		"description": "Enable Pause Animation Effects"
	},

	"colors-section": {
		"type": "section",
		"description": "Colors"
	},

	"left-click-color": {
		"type": "colorchooser",
		"default": "#0c75de",
		"description": "Left Click Color",
		"dependency": "left-click-effect-enabled"
	},
	"middle-click-color": {
		"type": "colorchooser",
		"default": "#40BEBF",
		"description": "Middle Click Color",
		"dependency": "middle-click-effect-enabled"
	},
	"right-click-color": {
		"type": "colorchooser",
		"default": "#4077BF",
		"description": "Right Click Color",
		"dependency": "right-click-effect-enabled"
	}
}